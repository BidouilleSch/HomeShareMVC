        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ajouter" class="btn btn-default" />
            </div>
        </div>
    </div>
    
</form>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
