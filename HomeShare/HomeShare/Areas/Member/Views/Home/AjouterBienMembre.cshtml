@model HomeShareDAL.BienEchange

@{
    ViewBag.Title = "AjouterBienMembre";
}

<h2>Ajoutez un bien</h2>

<form method="post" action="~/Member/Home/AjouterBienMembre" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Titre, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Titre)
                @Html.ValidationMessageFor(model => model.Titre)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DescCourte, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DescCourte)
                @Html.ValidationMessageFor(model => model.DescCourte)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DescLong, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DescLong)
                @Html.ValidationMessageFor(model => model.DescLong)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NombrePerson, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombrePerson)
                @Html.ValidationMessageFor(model => model.NombrePerson)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pays, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="IdPays">
                    @{
                        List<HomeShareDAL.Pays> lstPays = HomeShareDAL.Pays.ChargerTousLesPays();
                        foreach (HomeShareDAL.Pays item in lstPays)
                        {
                            <option value="@item.IdPays">@item.Libelle</option>
                        }
                    }
                </select>

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ville, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ville)
                @Html.ValidationMessageFor(model => model.Ville)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Rue, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rue)
                @Html.ValidationMessageFor(model => model.Rue)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Numero, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Numero)
                @Html.ValidationMessageFor(model => model.Numero)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CodePostal, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CodePostal)
                @Html.ValidationMessageFor(model => model.CodePostal)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Photo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="Fclient" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AssuranceObligatoire, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AssuranceObligatoire)
                @Html.ValidationMessageFor(model => model.AssuranceObligatoire)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsEnabled, new { @class = "control-label col-md-2" })
